<button id="theme-toggle" aria-label="Toggle theme" title="Toggle theme">
  <span class="icon sun" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="5"/>
      <line x1="12" y1="1" x2="12" y2="3"/>
      <line x1="12" y1="21" x2="12" y2="23"/>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
      <line x1="1" y1="12" x2="3" y2="12"/>
      <line x1="21" y1="12" x2="23" y2="12"/>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
    </svg>
  </span>

  <span class="pill">
    <span class="circle"></span>
  </span>

  <span class="icon moon" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
    </svg>
  </span>
</button>

<style>
  /*
   * DOM order: [sun][pill][moon]
   * Light mode: sun visible  →  [✺][pill]
   * Dark mode:  moon visible →  [pill][☽]
   *
   * Pill: 36×18px, 2px border, no fill
   * Inner area: 32×14px
   * Circle: 12×12px at top: 1px, left: 1px (3px from outer edge)
   *   light (right): translateX(18px)  →  1+18=19px, 32-19-12=1px right inset ✓
   *   dark  (left):  translateX(0)
   */

  button {
    display: flex;
    align-items: center;
    gap: 7px;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  /* ── Icons: always occupy space, fade + scale in/out ── */
  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-muted);
    visibility: hidden;
    opacity: 0;
    transform: scale(0.7);
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s ease;
  }

  :global([data-theme="light"]) .sun  { visibility: visible; opacity: 1; transform: scale(1); }
  :global([data-theme="dark"])  .moon { visibility: visible; opacity: 1; transform: scale(1); }

  /* ── Pill: outline only, no fill ── */
  .pill {
    position: relative;
    width: 36px;
    height: 18px;
    border-radius: 999px;
    background: none;
    flex-shrink: 0;
  }

  .pill { border: 2px solid var(--color-text); }

  /* ── Circle ── */
  .circle {
    position: absolute;
    top: 1px;
    left: 1px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-text);
    transition: transform 0.3s cubic-bezier(0.34, 1.3, 0.64, 1);
  }

  :global([data-theme="light"]) .circle { transform: translateX(18px); }
  :global([data-theme="dark"])  .circle { transform: translateX(0); }
</style>

<script>
  const btn = document.getElementById('theme-toggle');

  btn?.addEventListener('click', () => {
    const html = document.documentElement;
    const next = html.dataset.theme === 'dark' ? 'light' : 'dark';
    html.dataset.theme = next;
    localStorage.setItem('theme-override', next);
  });
</script>
